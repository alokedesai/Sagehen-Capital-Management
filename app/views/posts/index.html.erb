<%= render 'layouts/header' %>
<%= render 'layouts/blue', :title=> "Market Insights" %>
<div class="container">

  <% @posts.each do |post| %>
    <h2><%= link_to post.title, post %></h2>
    Posted on <%= post.readable_created_at %> by <%= post.user.name %>
    <p>
      <%== post.slideshare_html %>
      <%== post.content %>
    </p>
  <% end %>
  <%= will_paginate @posts %>
</div>

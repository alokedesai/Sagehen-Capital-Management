<%= render 'admin/layouts/header' %>
<div class="container mtb">
  <h1>Resources</h1>
  <%= link_to "Create Resource", new_admin_resource_path, :class=>"btn btn-theme" %>
  <table class="table">
    <thead>
      <tr>
        <th>
          Title
        </th>
        <th>
          URL
        </th>
        <th>
          Actions
        </th>
      </tr>
    </thead>
      <% @resources.each do |resource| %>
      <tr>
        <td>
          <%= resource.title %>
        </td>
        <td>
          <%= link_to resource.url, resource.url %>
        </td>
        <td class="actions">
          <%= link_to "Update", edit_admin_resource_path(resource), :class=> "btn btn-default" %>
          <%= link_to "Delete", admin_resource_path(resource), :method=> :delete, :confirm=> "Are you sure you want to delete this resource?", :class=> "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
  </table>
</div>

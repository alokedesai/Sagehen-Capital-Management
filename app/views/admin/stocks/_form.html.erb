<% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert alert-#{name}" %>
<% end %>

<%= form_for [:admin, @stock], :html=> {:role=>"form"} do |f| %>
  <div class="form-group">
    <%= f.label "Ticker" %>
    <%= f.text_field :ticker, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "# of Shares" %>
    <%= f.number_field :share_count, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Purchase Date" %>
    <%= f.date_field :purchase_date, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Purchase Price" %>
    <%= f.number_field :purchase_price, :class=> "form-control" %>
  </div>

  <%= f.submit :class=> "btn btn-theme" %>
<% end %>

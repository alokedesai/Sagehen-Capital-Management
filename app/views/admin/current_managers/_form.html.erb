<%= form_for [:admin, @current_manager], :html=> {:role=>"form"} do |f| %>
  <div class="form-group">
    <%= f.label "Name" %>
    <%= f.collection_select :user_id, User.all, :id, :name, {}, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Title" %>
    <%= f.text_field :title, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Position Order (for the current management page)" %>
    <%= f.number_field :position_order, :in=>1..10, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Vice President?" %>
    <%= f.check_box :is_vp, :class=> "form-control" %>

  </div>

  <%= f.submit :class=> "btn btn-theme" %>
<% end %>
